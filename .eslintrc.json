{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "no-undef": 0,
        "quotes": [2, "single", { "avoidEscape": true }],
        "no-console": 1,
        "no-irregular-whitespace":0
    }
}
